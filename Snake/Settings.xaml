<UserControl x:Class="Snake.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400"
             Background="White">
    <Grid>
        <StackPanel>
            <TextBlock Text="Settings" FontWeight="Bold" FontSize="18"/>
            <Slider Name="Slider1" Width="200" Minimum="0" Maximum="100" Value="50"/>
            <Slider Name="Slider2" Width="200" Minimum="0" Maximum="100" Value="50"/>
            <!-- Add more settings controls here as needed -->
        </StackPanel>
    </Grid>
</UserControl>
